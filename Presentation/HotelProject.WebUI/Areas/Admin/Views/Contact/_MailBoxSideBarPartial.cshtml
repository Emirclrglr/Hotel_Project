<div class="email-left-box">
	<a href="/Admin/Contact/SendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
	<div class="mail-list mt-4">
		<a href="/Admin/Contact/Inbox/" class="list-group-item border-0 p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i>Gelen Kutusu<span class="badge badge-primary float-right">@ViewBag.InboxCount</span></a>
		<a href="/Admin/Contact/Sendbox/" class="list-group-item border-0 p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden Kutusu<span class="badge badge-info float-right">@ViewBag.SendboxCount</span></a>
		<a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-star-o font-18 align-middle mr-2"></i>Önemli</a>
		<a href="#" class="list-group-item border-0 p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslaklar</a>
		<a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu</a>
	</div>
	<h5 class="mt-5 m-b-10">Kategoriler</h5>
	<div class="list-group mail-list">
		<a href="#" class="list-group-item border-0"><span class="fa fa-briefcase f-s-14 mr-2"></span>Şikayet</a>
		<a href="#" class="list-group-item border-0"><span class="fa fa-sellsy f-s-14 mr-2"></span>Teşekkür</a>
		<a href="#" class="list-group-item border-0"><span class="fa fa-ticket f-s-14 mr-2"></span>Destek</a>
		<a href="#" class="list-group-item border-0"><span class="fa fa-tags f-s-14 mr-2"></span>İş Başvurusu</a>
	</div>
</div>

<script>
			document.addEventListener("DOMContentLoaded", function() {
		const links = document.querySelectorAll('.email-left-box .list-group-item');

		const currentUrl = window.location.href;

		links.forEach(link => {
			if (link.href === currentUrl) {
				link.classList.add('text-primary');
			} else {
				link.classList.remove('text-primary');
			}
		});
	});
</script>