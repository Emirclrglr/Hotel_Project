@model IEnumerable<InboxContactDto>
@{
	ViewData["Title"] = "Inbox";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				@await Html.PartialAsync("_MailBoxSideBarPartial")
				<div class="email-right-box">
					<div role="toolbar" class="toolbar">
						<div class="btn-group">
							<button aria-expanded="false" class="btn btn-dark" type="button">
								Gelen Mesajlar
							</button>

						</div>
					</div>
					<div class="email-list m-t-15">
						@foreach (var item in Model)
						{
							string message;
							string time = item.ContactDate.ToString("HH:mm");
							if (item.ContactMessage.Length >= 150)
							{
								message = $"{item.ContactMessage.Substring(0, 150)}...";
							}
							else {
								message = item.ContactMessage;
							}

							<div class="message">
								<a href="/Admin/Contact/MessageDetails/@item.ContactId">
									<div class="col-mail col-mail-1">
										<div class="email-checkbox">
											<input type="checkbox" id="chk2">
											<label class="toggle" for="chk2"></label>
										</div><span class="star-toggle ti-star"></span>
									</div>
									<div class="col-mail col-mail-2">
										<div class="subject mt-1"><strong>@item.Subject: </strong>@message</div>
										<div class="date">@time</div>
									</div>
								</a>
							</div>

						}
					</div>
					<!-- panel -->
					<div class="row">
						<div class="col-7">
							<div class="text-left">1 - 20 of 568</div>
						</div>
						<div class="col-5">
							<div class="btn-group float-right">
								<button class="btn btn-gradient" type="button">
									<i class="fa fa-angle-left"></i>
								</button>
								<button class="btn btn-dark" type="button">
									<i class="fa fa-angle-right"></i>
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

