@model List<RoleAssignVM>
@{
	ViewData["Title"] = "RoleAssign";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
	<div class="card my-3">
		<div class="card-header pt-5 p-0 pr-3 pb-2">
			<h3 class="text-primary text-center">Rol Ata</h3>
		</div>
		<div class="card-body d-flex justify-content-center pt-0">
			<form method="post">
				@for (int i = 0; i < Model.Count(); i++)
				{
					<div class="form-check">
						<input type="hidden" asp-for="@Model[i].RoleId" />
						<input type="hidden" asp-for="@Model[i].RoleName" />
						<input type="checkbox" asp-for="@Model[i].IsRoleExists" class="form-check-input my-1 ml-3 "/>
						<label asp-for="@Model[i].IsRoleExists" class="form-check-label my-1 ml-5 pl-2">@Model[i].RoleName</label>
					</div>
				}
				<button class="btn btn-success btn-rounded text-white my-3 px-5">Rolleri Güncelle</button>
			</form>

		</div>
	</div>
</div>

