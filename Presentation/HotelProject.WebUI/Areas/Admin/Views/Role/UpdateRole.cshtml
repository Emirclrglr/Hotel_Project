@model UpdateRoleVM
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title m b-4">Rol Güncelle</h4>
        <div class="basic-form">
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Rol Adı" asp-for="RoleName">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <button class="btn btn-rounded btn-outline-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

