@model UpdateStaffViewModel

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">Personel Düzenle</h4>
        <div class="basic-form">
            <form method="post">
                <input type="hidden" asp-for="staffId"/>
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Personel Adı Soyadı" asp-for="staffName">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Personel Unvanı" asp-for="staffTitle">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Personel Görseli" asp-for="staffImageUrl">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="X Adresi" asp-for="xUrl">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Instagram Adresi" asp-for="instagramUrl">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Facebook Adresi" asp-for="facebookUrl">
                </div>
                <button class="btn btn-rounded btn-outline-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>



