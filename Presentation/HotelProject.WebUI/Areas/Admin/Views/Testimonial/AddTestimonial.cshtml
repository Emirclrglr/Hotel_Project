@model CreateTestimonialViewModel
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">Yeni Referans Oluştur</h4>
        <div class="basic-form">
            <form method="post">
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Referans Adı Soyadı" asp-for="testimonialName">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Referans Unvanı" asp-for="testimonialTitle">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-default" placeholder="Referans Görseli" asp-for="testimonialImageUrl">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control input-default" placeholder="Yorum" asp-for="testimonialComment" style="height:100px;"></textarea>
                </div>
                <button class="btn btn-rounded btn-outline-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>


