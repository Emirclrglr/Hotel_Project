
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadViewPartial")

<body>
	<div class="container-xxl bg-white p-0">

		<!-- Spinner Start -->
		@await Component.InvokeAsync("_SpinnerViewPartial")
		<!-- Spinner End -->
		<!-- Header Start -->
		@await Component.InvokeAsync("_NavbarViewPartial")
		<!-- Header End -->
		<!-- Page Header Start -->
        @await Component.InvokeAsync("_BookingPageHeaderViewPartial")
		<!-- Page Header End -->
		<!-- Booking Form Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title text-center text-primary text-uppercase">Rezervasyon yapın</h6>
                    <h1 class="mb-5"> <span class="text-primary text-uppercase">Bir Oda Ayırtın</span></h1>
                </div>
                <div class="row g-5">
                    <div class="col-lg-6">
                        <div class="row g-3">
                            <div class="col-6 text-end">
                                <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/hotel-html-template/img/about-1.jpg" style="margin-top: 25%;">
                            </div>
                            <div class="col-6 text-start">
                                <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/hotel-html-template/img/about-2.jpg">
                            </div>
                            <div class="col-6 text-end">
                                <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/hotel-html-template/img/about-3.jpg">
                            </div>
                            <div class="col-6 text-start">
                                <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/hotel-html-template/img/about-4.jpg">
                            </div>
                        </div>
                    </div>
                    @* Booking Form *@
                    @await Html.PartialAsync("_BookingFormPartial")
                </div>
            </div>
        </div>
        <!-- Booking Form End -->
        <!-- Newsletter Start -->
		@* @await Component.InvokeAsync("_NewsletterViewPartial") *@
		@await Html.PartialAsync("~/Views/Default/SubscribeToNewsletter.cshtml")
		<!-- Newsletter End -->
		<!-- Footer Start -->
		@await Component.InvokeAsync("_FooterViewPartial")
		<!-- Footer End -->
		<!-- Back to Top -->
		<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
	</div>

	<!-- JavaScript Libraries -->
	@await Component.InvokeAsync("_ScriptsViewPartial")

</body>

</html>
