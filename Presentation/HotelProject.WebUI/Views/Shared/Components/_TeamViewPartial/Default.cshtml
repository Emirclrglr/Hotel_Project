@model IEnumerable<ResultStaffDto>
@{
    int counter = 1;
}
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Ekibimiz</h6>
            <h1 class="mb-5">Ekip Üyelerimizi <span class="text-primary text-uppercase">Keşfedin</span></h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model){
                counter += 2;
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="@($"0.{counter}s")">
                    <div class="rounded shadow overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="@item.staffImageUrl" alt="">
                            <div class="position-absolute start-50 top-100 translate-middle d-flex align-items-center">
                                <a class="btn btn-square btn-primary mx-1" href="@item.facebookUrl"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-square btn-primary mx-1" href="@item.xUrl"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-square btn-primary mx-1" href="@item.instagramUrl"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="text-center p-4 mt-3">
                            <h5 class="fw-bold mb-0">@item.staffName</h5>
                            <small>@item.staffTitle</small>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
