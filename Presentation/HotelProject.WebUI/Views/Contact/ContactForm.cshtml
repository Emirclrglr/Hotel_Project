@model CreateContactDto
<div class="col-md-6">
    <div class="wow fadeInUp" data-wow-delay="0.2s">
        <form id="contactForm" method="post" asp-action="ContactForm" asp-controller="Contact" onsubmit="return submitForm(event)">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="name" placeholder="Adınız" asp-for="ContactName" required>
                        <label for="name">Adınız</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="email" placeholder="E-Posta Adresiniz" asp-for="ContactMail" required>
                        <label for="email">E-Posta Adresiniz</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="subject" placeholder="Konu" asp-for="Subject" required>
                        <label for="subject">Konu</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Mesajınızı buraya yazın" id="message" style="height: 150px" asp-for="ContactMessage" required></textarea>
                        <label for="message">Mesaj</label>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100 py-3">Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/contact.js"></script>